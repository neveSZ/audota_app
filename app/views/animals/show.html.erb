<% if @animal.present? %>
  <h1><% @animal.nome %></h1>
  
  <%= @animal.idade %>
  <%= @animal.cor %>
  <%= @animal.tipo_pelo %>
  <%= @animal.peso %>
  <%= @animal.porte %>
  <%= @animal.descricao %>
  <%= @animal.status %>      
  <% if admin_signed_in? %> 
    <%= link_to 'Editar animal', edit_animal_path(@animal) %>
  <% else %>
    <% if @animal.disponivel? %>
      <%= link_to 'Adotar', new_order_path(animal_id: @animal)%>
      <% if @favoritos_atuais.animal.ids.include?(@animal.id) %>
        <%= link_to 'Desfavoritar', favoritos_path(animal_id: @animal), method: :delete %>
      <% else %>
        <%= link_to 'Favoritar', favoritos_path(animal_id: @animal), method: :post %>
      <% end %>
    <% end %>  
  <% end %>  

  <% if @animal.midias.attached? %>
    <% @animal.midias.each do |midia| %>
      <%= image_tag midia %>
    <% end %>
  <% end %>

<% end %>