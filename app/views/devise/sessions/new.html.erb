<%= stylesheet_link_tag 'signin_page.css' %>
<body>
  <div class='login'>
    <h2 class="title">Login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, :class => 'text' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'default_input' %>
    </div>

    <div class="field">
      <%= f.label :password, :class => 'text' %>
      <%= f.password_field :password, autocomplete: "current-password", :class => 'default_input' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <br>

    <div class="actions">
      <%= f.submit "Entrar", :class => 'default_button' %>
    </div>
    <br>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</body>