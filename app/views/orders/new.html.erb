<% @order.errors.full_messages.each do |message| %>
  <%= message %>
<% end %>

<h1>Informações para adoção</h1>

<%= form_with model: @order, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :cpf %>
  <%= f.text_field :cpf %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :age %>
  <%= f.number_field :age %>
  <%= f.label :telephone %>
  <%= f.text_field :telephone %>
  <%= f.submit 'Concluir' %>
  <%= f.hidden_field :animal_id, value: @animal.id %>
<% end %>